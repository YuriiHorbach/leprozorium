<h4>Post details</h4>
<!--  -->
		<p>
			Author:<span style="font-size: 150%; color:green;"><%= @row['author']%></span>
		</p>
		<p>
			<%= @row['content']%>
			<br><br>

			Added at <span style="font-size: 150%; color:green;"><%= @row['create_date']%></span>

		</p>

<% @comments.each do |comment|%>
		
		<p>
			<%= comment['content']%>
		</p>
		<br>
		<span style="font-size: 75%; color: #999">Added at <%= comment['create_date']%></span>
		<hr>
<%end%>

<form action="/details/<%= @row['id']%>" method="POST" role="form">
		<textarea name="content" id="fomcomment" rows="6" class="form-control"></textarea >
		<br>

		<button type="submit" class="btn btn-primary">
			Add comment
		</button>
</form>



